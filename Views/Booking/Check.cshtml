@model List<Regstration.Models.Booking>
@{
    Layout = "_Layout";
}
<partial name="_MyPartialView" />
<body class="booking-page">
    <!-- Main Content -->
    <div class="container mt-5 pt-5">

<!-- Table with dynamic data from the model -->
<h2 class="text-center text-white mt-5">Booking Information</h2>
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>From</th>
                <th>To</th>
                <th>Departure Date</th>
                <th>Bus Type</th>
                <th>Name</th>
                        <th>Phone Number</th>
                <th>Passenger</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var booking in Model)
            {
                <tr>
                    <td>@booking.Source</td>
                    <td>@booking.Destination</td>
                    <td>@booking.DepartureDate</td>
                    <td>@booking.BusType</td>
                            <td>@booking.Name</td>
                            <td>@booking.PhoneNumber</td>
                    
                    <td>@booking.Passenger</td>
                </tr>
            }
        </tbody>
    </table>
</div>
    </div>



