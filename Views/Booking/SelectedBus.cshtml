@model Domain.Entities.BookingBuses

@{
    Layout = "_Layout2";
}


<body class="contact-page">


<div class="container mt-5 pt-5">
    

    <!-- Main Rows -->
    <div class="row">
        <!-- Centered Card Column -->
        <div class="col-md-6 mx-auto">
            <div class="text-left">
                <!-- Booking Information Section -->
                <h6 class="mt-4 text-center">Booking Information</h6>
                

                @foreach (var book in Model.booking)
                {
                    <div class="card mt-3">
                        <div class="card-body">
                            <h5 class="card-title text-center">Booking Details</h5>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">Source: @book.Source</li>
                                <li class="list-group-item">Destination: @book.Destination</li>
                                <li class="list-group-item">Departure Date: @book.DepartureDate</li>
                                <li class="list-group-item">Bus Type: @book.BusType</li>
                                <li class="list-group-item">Passenger Name: @book.Name</li>
                                <li class="list-group-item">Phone Number: @book.PhoneNumber</li>
                                <li class="list-group-item">Gender: @book.Passenger</li>
                            </ul>

                            <!-- Action Buttons -->
                            <div class="text-center mt-4">
                                <a href="@Url.Action("Confirm", "Booking")" class="btn btn-success mx-2">Confirm</a>
                                <a href="@Url.Action("DeleteBooking", "Booking", new { id = book.BookingId })" class="btn btn-danger mx-2" onclick="return confirm('Are you sure you want to delete this booking?');">Delete</a>
                                <a href="@Url.Action("UpdateBooking", "Booking", new { id = book.BookingId })" class="btn btn-primary mx-2">Update</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

 </body>